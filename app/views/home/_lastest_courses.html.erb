<div class="container">
  <div class="empty-space marg-lg-b85 marg-sm-b50 marg-xs-b30"></div>

  <div class="tt-heding type-2">
    <h2 class="tt-heding-title c-h4 txt-uppercase">
      <span><%= t ".lastest_courses" %></span>
    </h2>
  </div>
  <div class="empty-space marg-lg-b40 marg-sm-b30"></div>

  <div class="tt-swiper-separated tt-custom-arrow">
    <div class="swiper-container" data-autoplay="0" data-loop="1" data-speed="500" data-center="0" data-slides-per-view="responsive" data-xs-slides="1" data-sm-slides="3" data-md-slides="4" data-lg-slides="4" data-add-slides="4">
      <div class="swiper-wrapper clearfix">
        <% courses.each_with_index do |course, _index| %>
          <div class="swiper-slide" data-val="<%= _index %>">
            <div class="tt-cours">
              <%= link_to "#", class: "tt-cours-img custom-hover" do %>
                <%= image_tag course.images.any? ? course.images.first.url : "course_default.jpg", class: "img-responsive" %>
              <% end %>
              <div class="tt-cours-info">
                <div class="tt-cours-cat"><%= course.course_category_name %></div>
                <%= link_to "#", class: "tt-cours-title c-h6" do %>
                  <%= course.name %>
                <% end %>
              </div>
              <div class="tt-cours-bottom clearfix">
                <div class="tt-cours-left" data-toggle="tooltip"
                  title="<%= t ".enrolled_count" %>">
                  <span class="tt-cours-count">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <%= course.enrolled_count %>
                  </span>
                </div>
                <div class="tt-cours-right">
                  <div class="tt-cours-price">
                    <%= number_to_currency(course.cost, unit: "VND",
                      precision: 0, delimiter: ".", format: "%n %u") %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="pagination type-1 visible-xs-block"></div>
    </div>

    <div class="custom-arrow-left tt-arrow-left type-1 pos-1 hidden-xs"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></div>
    <div class="custom-arrow-right tt-arrow-right type-1 pos-1 hidden-xs"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></div>
  </div>
  <div class="empty-space marg-lg-b105 marg-sm-b50 marg-xs-b30"></div>
</div>
