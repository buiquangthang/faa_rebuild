<div class="bg-1">
  <div class="container">
    <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>
    <div class="tt-heding type-2">
      <h4 class="tt-heding-title c-h4 txt-uppercase">
        <span><%= t ".trainers" %></span>
      </h4>
      <h4 class="index-more-trainer-btn">
        <%= link_to trainers_path do %>
          <%= t ".more" %>
          <i class="fa fa-arrow-right" aria-hidden="true"></i>
        <% end %>
      </h4>
    </div>
    <div class="empty-space marg-lg-b50 marg-sm-b30"></div>

    <div class="tt-swiper-separated tt-custom-arrow">
      <div class="swiper-container" data-autoplay="5000" data-loop="1" data-speed="500"
        data-center="0" data-slides-per-view="responsive" data-xs-slides="1"
        data-sm-slides="3" data-md-slides="4" data-lg-slides="4" data-add-slides="4">
        <div class="swiper-wrapper clearfix">
          <% trainers.each do |trainer, _index| %>
            <div class="swiper-slide" data-val="<%= _index %>">
              <div class="tt-teacher">
                <div class="tt-teacher-img">
                  <div class="tt-teacher-pic index-trainer-avatar">
                    <%= image_tag trainer.image.present? ? trainer.image.url : "user_default.jpg", class: "img-responsive" %>
                  </div>
                </div>
                <div class="tt-teacher-info index-trainer-info">
                  <%= link_to trainer_path(trainer), class: "tt-teacher-title" do %>
                    <%= trainer.name %>
                  <% end %>
                  <div class="simple-text size-3 color-4">
                    <p data-toggle="tooltip" title="<%= trainer.quote %>">
                      <%= truncate trainer.quote, length: Settings.home.trainer_quote_limit %>
                    </p>
                  </div>
                </div>
              </div>
              <div class="empty-space marg-sm-b30"></div>
            </div>
          <% end %>
        </div>
        <div class="pagination type-1 visible-xs-block"></div>
      </div>
      <div class="empty-space marg-lg-b85 marg-sm-b50 marg-xs-b50"></div>
    </div>
  </div>
</div>
