<%= render "shared/top_heading", title: t(".all_news"), page_name: t(".news") %>
<div class="bg-1 tt-sidebar-right tt-overflow">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="tt-two-colors pright20">
          <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>
          <h1 class="nomargin news-titles"><%= @news.title %></h1>
          <div class="empty-space marg-lg-b25 marg-sm-b30"></div>

          <%= render "news_header", news: @news %>

          <div class="simple-text size-5 color-9">
            <%= markdown @news.content %>
          </div>
          <div class="empty-space marg-lg-b45 marg-sm-b30"></div>
        </div>
      </div>
      <%= render "right_sidebar_news" %>
    </div>
  </div>
</div>

