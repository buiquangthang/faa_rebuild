<div class="tt-post-label">
  <span>
    <i class="fa fa-user" aria-hidden="true"></i>
    <%= t ".by" %>
    <a><%= news.admin_name %></a>
  </span>
  <span>
    <i class="fa fa-tags" aria-hidden="true"></i>
    <%= raw news.tag_list.map{|t| link_to t, tag_path(t)}.join(', ') %>
  </span>
  <span>
    <i class="fa fa-calendar" aria-hidden="true"></i>
    <%= l news.created_at, format: :date_month_year_concise %>
  </span>
</div>
