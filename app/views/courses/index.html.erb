<div id="content-wrapper">
  <%= render "shared/top_heading", title: t(".all_course"),
    page_name: t(".course") %>
  <div class="bg-1 tt-sidebar-right tt-overflow">
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <div class="tt-two-colors pright20">
            <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>
            <div class="tt-searchbar-top">
              <div class="tt-searchbar-form">
                <input type="text" id="search-input" placeholder="<%= t ".search_course" %>">
                <div class="tt-searchbar-submit">
                  <i class="stroke-icon icon-Search"></i>
                </div>
              </div>
              <a class="tt-searchbar-view active" href="#" data-view="grid">
                <i class="fa fa-th-large" aria-hidden="true"></i>
              </a>
              <a class="tt-searchbar-view" href="#" data-view="list">
                <i class="fa fa-list" aria-hidden="true"></i>
              </a>
            </div>
            <div class="tt-seachbar-content clearfix contain-courses" data-view="grid">
              <%= render @courses %>
              <%= paginate @courses %>
            </div>
            <div class="empty-space marg-lg-b135 marg-md-b120 marg-sm-b50 marg-xs-b30"></div>
          </div>
        </div>
        <%= render "right_sidebar_course" %>
      </div>
    </div>
  </div>
</div>
<div class="render-form-registration"></div>

<%= javascript_include_tag "courses" %>
