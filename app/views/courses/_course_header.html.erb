<div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>
<div class="tt-heding type-2">
  <h2 class="tt-heding-title c-h4 txt-uppercase">
    <span><%= course.name %></span>
  </h2>
</div>
<div class="empty-space marg-lg-b25"></div>

<div class="simple-text size-4 color-3">
  <p><%= course.description %></p>
</div>
<div class="empty-space marg-lg-b50"></div>

<div class="tt-simple-image-2">
  <%= load_image course, "image-course" %>
</div>

<div class="empty-space marg-lg-b10"></div>
<div class="tt-author">
  <div class="tt-author-avacell">
    <div class="tt-author-ava">
      <div class="tt-author-imgcell">
        <div class="round">
          <img src="/assets/introduction/teaching.png" class="image-author" alt="">
        </div>
      </div>
      <div class="tt-author-infocell">
        <div class="tt-author-position"><%= t ".teacher" %></div>
        <p class="tt-author-name"><%= t ".framgia_vietnam" %></p>
      </div>
    </div>
  </div>
  <div class="tt-author-catcell">
    <div class="tt-author-label"><%= t ".category" %></div>
    <div class="tt-author-tags">
      <%= link_to courses_path(course_category: course.course_category_name) do %>
        <%= course.course_category_name %>
      <% end %>
    </div>
  </div>
  <div class="tt-author-pricecell tt-author-ratecell">
    <%= number_to_currency course.cost, unit: "Ä‘", precision: 0,
    delimiter: ".", format: "%n %u" %>
  </div>
</div>
<div class="empty-space marg-lg-b30"></div>

<%= link_to new_registration_path(course: course.id), class: "c-btn type-1 size-3 color-2", remote: true do %>
  <span>
    <%= t ".register_now" %>
    <i class="fa fa-arrow-right" aria-hidden="true"></i>
  </span>
<% end %>
<div class="empty-space marg-lg-b85 marg-sm-b50 marg-xs-b30"></div>
