<div id="breadcrumb" class="full-breadcrumb">
  <div class="container">
    <div class="header-page row">
      <div class="title-page col-md-3 col-sm-3">
        <h2><%= t ".detail_course" %></h2>
      </div>
      <div class="breadcrumbs col-md-9 col-sm-9">
        <ul>
          <li>
            <%= link_to t(".home"), root_path %>
          </li>
          <li>
            <%= link_to t(".course"), courses_path %>
          </li>
          <li class="active"><span><%= t ".detail_course" %></span></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="main-content" class="full-content">
  <div class="container">
    <div class="row">
      <div id="component" class="col-md-9 col-sm-9">
        <div class="banner">
          <%= load_image @course, "image-w880-h337" %>
        </div>
        <div class="detail-class">
          <%= render "course_header", course: @course,
            newest_schedule: @course.newest_schedule %>
          <div class="description">
            <%= markdown @course.content %>
          </div>
        </div>
      </div>

      <%= render "right_sidebar_course" %>
    </div>
  </div>
</div>
