<div class="tt-seachbar-entry">
  <div class="tt-cours type-2 type-2-custom course-register-hover">
    <%= link_to new_registration_path(course: course.id), remote: true,
      class: "tt-cours-img tt-gallery-1" do %>
      <span class="tt-gallery-1-overlay"></span>
        <%= load_image course %>
      <span class="tt-gallery-1-caption">
        <span class="tt-gallery-1-caption-table">
          <span class="tt-gallery-1-caption-inner">
            <span class="tt-gallery-1-search"><i class="stroke-icon icon-Pencil"></i></span>
            <span class="tt-gallery-1-name"><%= t ".register" %></span>
          </span>
        </span>
      </span>
    <% end %>
    <div class="tt-cours-info">
      <div class="tt-cours-cat"><%= course.course_category_name %></div>
      <%= link_to course.name, course_path(course),
        class: "tt-cours-title c-h6"%>
      <div class="simple-text size-4">
        <p>
          <%= truncate course.description,
            length: Settings.courses.length_description %>
          <br>
          <%= link_to t(".readmore"), course_path(course) %>
        </p>
      </div>
    </div>
    <div class="tt-cours-bottom clearfix">
      <div class="tt-cours-left">
        <span class="tt-cours-rating">
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
        </span>
      </div>
      <div class="tt-cours-right">
        <div class="tt-cours-price">
          <%= number_to_currency course.cost, unit: "VND", precision: 0,
            delimiter: ".", format: "%n %u" %>
        </div>
      </div>
    </div>
  </div>
</div>
