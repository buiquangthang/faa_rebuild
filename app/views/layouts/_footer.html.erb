<footer class="tt-footer">
  <div class="container footer-info">
    <div class="empty-space marg-lg-b50 marg-sm-b30"></div>
    <div class="row">
      <div class="col-sm-6 col-md-2">
        <h4 class="tt-footer-title"><%= t ".our_courses" %></h4>
        <div class="empty-space marg-lg-b25"></div>

        <ul class="tt-footer-list clearfix">
          <% @courses.each do |course| %>
            <li><%= link_to course.name, course_path(course) %></li>
          <% end %>
        </ul>
        <div class="empty-space marg-sm-b30"></div>
      </div>
      <div class="clearfix visible-sm-block"></div>
      <div class="col-sm-6 col-md-2">
        <h4 class="tt-footer-title"><%= t ".quick_links" %></h4>
        <div class="empty-space marg-lg-b25"></div>

        <ul class="tt-footer-list clearfix">
          <li><%= link_to t(".home"), root_path %></li>
          <li><%= link_to t(".courses"), course_schedules_path %></li>
          <li><%= link_to t(".news"), news_index_path %></li>
          <li><%= link_to t(".trainers"), trainers_path %></li>
          <li><%= link_to t(".contact"), new_feedback_path %></li>
        </ul>
        <div class="empty-space marg-xs-b30"></div>
      </div>
      <div class="col-sm-6 col-md-4">
        <h4 class="tt-footer-title"><%= t ".contact_us" %></h4>
        <div class="empty-space marg-lg-b25"></div>

        <ul class="tt-footer-contact">
          <li>
            <i class="fa fa-map-marker"></i>
            <strong><%= t ".faa" %></strong>, <%= t ".framgia_address" %>
          </li>
          <li class="style-2">
            <i class="fa fa-phone"></i>
            <a href="tel:<%= Settings.framgia.phone_number %>">
              <%= Settings.framgia.phone_text %>
            </a>
          </li>
          <li>
            <i class="fa fa-envelope-o"></i>
            <a href="mailto:<%= Settings.framgia.email %>">
              <%= Settings.framgia.email %></a>
          </li>
          <li>
            <i class="fa fa-facebook"></i>
            <a href="<%= Settings.framgia.facebook %>", target="_blank">
              <%= Settings.framgia.facebook %></a>
          </li>
        </ul>
      </div>
      <div class="col-sm-6 col-md-4">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3131.822253827116!2d105.78308434015436!3d21.01726350818583!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab4c85d8c3f1%3A0xd2c6f1171eb5829a!2sFramgia+Vietnam!5e0!3m2!1svi!2s!4v1497891515055" style="width: 100%; height: 100%;" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>
    </div>
    <div class="empty-space marg-lg-b50 marg-sm-b30"></div>
    <div class="tt-footer-line">
      <div class="row">
        <div class="col-sm-6">
          <div class="tt-footer-copy"><%= t ".copyright" %></div>
        </div>
      </div>
    </div>
  </div>
</footer>
