<div class="tt-teacher-wrapper trainers-trainer-wrapper">
  <div class="row">
    <% trainers.each do |trainer| %>
      <div class="col-sm-6 col-md-3">
        <div class="tt-teacher-2 trainers-trainer-detail">
          <%= link_to trainer_path(trainer), class: "tt-teacher-2-img custom-hover" do %>
            <%= image_tag trainer.image.present? ? trainer.image.url : "user_default.jpg", class: "img-responsive trainers-avatar" %>
          <% end %>
          <div class="tt-teacher-2-info">
            <%= link_to trainer_path(trainer), class: "tt-teacher-2-title trainer-name" do %>
              <%= trainer.name %>
            <% end %>
            <div class="simple-text size-3 color-3">
              <p data-toggle="tooltip" title="<%= trainer.quote %>">
                <%= truncate trainer.quote, length: Settings.home.trainer_quote_limit %>
              </p>
            </div>
          </div>
        </div>
        <div class="empty-space marg-sm-b30"></div>
      </div>
    <% end %>
  </div>
</div>
