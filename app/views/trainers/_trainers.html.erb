<div class="tt-teacher-wrapper trainers-trainer-wrapper">
  <div class="row">
    <% trainers.each do |trainer| %>
      <div class="col-sm-6 col-md-3">
        <div class="tt-teacher-2 trainers-trainer-detail">
          <%= link_to trainer_path(trainer), class: "tt-teacher-2-img custom-hover" do %>
            <%= image_tag trainer.image.present? ? trainer.image.url : "user_default.jpg", class: "img-responsive" %>
          <% end %>
          <div class="tt-teacher-2-info">
            <%= link_to trainer_path(trainer), class: "tt-teacher-2-title" do %>
              <%= trainer.name %>
            <% end %>
            <div class="simple-text size-3 color-3">
              <p><%= trainer.quote %></p>
            </div>
            <ul class="tt-teacher-2-social">
              <% trainer.certifications.each do |certification| %>
                <li>
                  <%= image_tag certification.image.url,
                    class: "icon-certification-index",
                    data: {toggle: "tooltip"}, title: certification.name %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="empty-space marg-sm-b30"></div>
      </div>
    <% end %>
  </div>
</div>
